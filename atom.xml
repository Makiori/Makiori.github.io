    <title>2021年的五一假期</title>
    <link href="http://example.com/2021/05/04/%E7%AC%AC%E4%BA%8C%E7%AF%87%E5%8D%9A%E5%AE%A2/"/>
    <id>http://example.com/2021/05/04/%E7%AC%AC%E4%BA%8C%E7%AF%87%E5%8D%9A%E5%AE%A2/</id>
    <published>2021-05-04T13:31:58.000Z</published>
